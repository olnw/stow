// This file contains some custom XKB options.

// Re-map modifier keys to be placed similarly to where
// they are on the Space Cadet keyboard.
// Bind caps lock to Hyper_L/Mod4,
// so it can be used for window manager shortcuts.
partial modifier_keys
xkb_symbols "space_cadet" {
    replace key <LALT> { [ Control_L, Control_L ] };
    replace key <LWIN> { [ Alt_L, Meta_L ] };
    replace key <LCTL> { [ Super_L ] };
    replace key <RALT> { [ Control_R, Control_R ] };
    replace key <MENU> { [ Alt_R, Meta_R ] };
    replace key <RCTL> { [ Super_R ] };
    //modifier_map Mod1 { <LWIN> };
    //modifier_map Mod3 { Hyper_L };
    //modifier_map Mod4 { <LCTL> };
    //modifier_map Control { <LALT> };

    modifier_map Mod3 { Super_L, Super_R };

    key <SUPR> { [ NoSymbol, Super_L ] };
    modifier_map Mod3 { <SUPR> };

    key <CAPS> { [ Hyper_L, Hyper_L ] };
    key <HYPR> { [ NoSymbol, Hyper_L ] };
    modifier_map Mod4 { <HYPR> };
};

// Make sure the right alt key isn't set to
// something else with the Colemak-DH layout.
partial modifier_keys
xkb_symbols "ralt" {
    replace key <RALT> { [ Alt_R ] };
};

